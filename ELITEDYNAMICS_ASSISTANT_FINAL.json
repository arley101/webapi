{
  "openapi": "3.1.1",
  "info": {
    "title": "EliteDynamicsAPI - Assistant Optimized",
    "description": "API simplificada para asistentes IA - Una sola ruta principal para todas las integraciones",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://elitedynamicsapi.azurewebsites.net",
      "description": "Servidor de Producción"
    }
  ],
  "paths": {
    "/api/v1/dynamics": {
      "post": {
        "summary": "Ejecutar cualquier acción",
        "description": "ÚNICA RUTA NECESARIA - Ejecuta cualquiera de las 476+ acciones disponibles. Tu asistente solo necesita esta ruta.",
        "operationId": "executeAction",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["action"],
                "properties": {
                  "action": {
                    "type": "string",
                    "description": "Nombre exacto de la acción a ejecutar",
                    "enum": [
                      "runway_list_models",
                      "runway_generate_video",
                      "runway_get_video_status",
                      "runway_cancel_task",
                      "runway_estimate_cost",
                      "runway_generate_video_advanced",
                      "runway_image_to_video_pro",
                      "runway_text_to_video_studio",
                      "runway_get_result_url",
                      "runway_wait_and_save",
                      "runway_check_configuration",
                      "email_send_message",
                      "calendario_create_event",
                      "calendario_list_events",
                      "notion_create_page",
                      "notion_search_pages",
                      "openai_generate_text",
                      "openai_generate_image",
                      "google_ads_get_campaigns",
                      "google_ads_create_campaign",
                      "meta_ads_get_insights",
                      "meta_ads_create_campaign",
                      "wp_create_post",
                      "wp_get_posts",
                      "hubspot_create_contact",
                      "hubspot_get_contacts",
                      "teams_send_message",
                      "youtube_channel_get_videos",
                      "powerbi_get_reports",
                      "sharepoint_upload_file",
                      "onedrive_upload_file",
                      "todo_create_task",
                      "planner_create_plan"
                    ]
                  },
                  "params": {
                    "type": "object",
                    "description": "Parámetros para la acción - Varía según la acción elegida",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Acción ejecutada correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["success"]
                    },
                    "data": {
                      "type": "object",
                      "description": "Resultados de la acción ejecutada"
                    },
                    "task_id": {
                      "type": "string",
                      "description": "ID para seguimiento si es proceso largo"
                    },
                    "message": {
                      "type": "string",
                      "description": "Mensaje descriptivo del resultado"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error en los parámetros enviados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["error"]
                    },
                    "message": {
                      "type": "string",
                      "description": "Descripción del error"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["error"]
                    },
                    "message": {
                      "type": "string",
                      "description": "Descripción del error del servidor"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {},
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Token de autenticación Bearer"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}
